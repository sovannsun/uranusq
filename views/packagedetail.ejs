<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Information</title>
    <!-- MATERIAL CDN -->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp"
      rel="stylesheet"
    />
    <!-- STYLESHEET-->
    <link rel="stylesheet" href="/css/packagedetail.css" />
  </head>
  <body>
    <%- include('layout/navbar') %>
    <div class="container">
      <aside>
        <div class="sidebar">
          <a href="/admin/dashboard">
            <span class="material-icons-sharp">grid_view</span>
            <h3>Dashboard</h3>
          </a>
          <a href="/admin/management">
            <span class="material-icons-sharp">manage_accounts</span>
            <h3>Management</h3>
          </a>
          <a href="/admin/billing" class="active">
            <span class="material-icons-sharp">payments</span>
            <h3>Billing</h3>
            <span class="message-count"><%= allwaitingpackage %></span>
          </a>
          <a href="/admin/setting">
            <span class="material-icons-sharp">settings</span>
            <h3>Setting</h3>
          </a>
          <a href="/admin/admin">
            <span class="material-icons-sharp">admin_panel_settings</span>
            <h3>Admin</h3>
          </a>
          <a href="/user/dashboard">
            <span class="material-icons-sharp">manage_accounts</span>
            <h3>User Account</h3>
          </a>
          <a href="/auth/user/logout">
            <span class="material-icons-sharp">logout</span>
            <h3>Logout</h3>
          </a>
        </div>
      </aside>
      <!-- END OF ASIDE -->
      <main>
        <h1>Package Information</h1>
        <div class="your-bot-cover"></div>
        <div class="user-detail">
          <div class="user-content">
            <h1>User Information</h1>
            <table>
              <tbody>
                <tr>
                  <td>User ID</td>
                  <td><%= packagedetail.userid._id %></td>
                </tr>
                <tr>
                  <td>First Name</td>
                  <td><%= packagedetail.userid.firstname %></td>
                </tr>
                <tr>
                  <td>Last Name</td>
                  <td><%= packagedetail.userid.lastname %></td>
                </tr>
                <tr>
                  <td>Username</td>
                  <td><%= packagedetail.userid.username %></td>
                </tr>
                <tr>
                  <td>Email</td>
                  <td><%= packagedetail.userid.email %></td>
                </tr>
                <tr>
                  <td>Phone Number</td>
                  <td><%= packagedetail.userid.phone %></td>
                </tr>
                <tr>
                  <td>Line ID</td>
                  <td><%= packagedetail.userid.lineid %></td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="user-content">
            <h1>Connection Information</h1>
            <table>
              <tbody>
                <tr>
                  <td>RapterX Crypto Pairs</td>
                  <td><%= packagedetail.userid.raptercryptopairs %></td>
                </tr>
                <tr>
                  <td>RapterX Api Key</td>
                  <td><%= packagedetail.userid.rapterapikey %></td>
                </tr>
                <tr>
                  <td>RapterX Secret Key</td>
                  <td><%= packagedetail.userid.raptersecretkey %></td>
                </tr>
                <tr>
                  <td>Hydra Crypto Pairs</td>
                  <td><%= packagedetail.userid.hydracryptopairs %></td>
                </tr>
                <tr>
                  <td>Hydra Api Key</td>
                  <td><%= packagedetail.userid.hydraapikey %></td>
                </tr>
                <tr>
                  <td>Hydra Secret Key</td>
                  <td><%= packagedetail.userid.hydrasecretkey %></td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="user-content">
            <h1>Package Information</h1>
            <table>
              <tbody>
                <tr>
                  <td>Order Number</td>
                  <td><%= packagedetail._id %></td>
                </tr>
                <tr>
                  <td>Package</td>
                  <td><%= packagedetail.package %></td>
                </tr>
                <tr>
                  <td>Life Time</td>
                  <td><%= packagedetail.packagelife %></td>
                </tr>
                <tr>
                  <td>Payment</td>
                  <td>
                    <form action="/user/package/update" method="POST">
                      <input
                        type="hidden"
                        name="id"
                        id="id"
                        value="<%= packagedetail._id %>"
                      />
                      <input
                        type="text"
                        name="payment"
                        id="payment"
                        value="<%= packagedetail.payment %>"
                      />
                      <select id="payment-change" onchange="ChangeValue()">
                        <option>Select</option>
                        <option value="Paid">Paid</option>
                        <option value="Pending">Pending</option>
                        <option value="Rejected">Rejected</option>
                      </select>
                      <button type="submit">Update</button>
                    </form>
                  </td>
                </tr>
                <tr>
                  <td>Start Date</td>
                  <td><%= packagedetail.startDate.toDateString() %></td>
                </tr>
                <tr>
                  <td>Expire Date</td>
                  <td><%= packagedetail.expireDate %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </main>
      <!-- END OF MAIN -->
    </div>
    <script src="/index.js"></script>
    <script>
      function ChangeValue() {
        let paymentchange = document.getElementById("payment-change").value;
        document.getElementById("payment").setAttribute("value", paymentchange);
      }
    </script>
  </body>
</html>
